{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block content %}
{{ form_start(form, {'action': path('saveprofiledata')}) }}
	{{ form_row(form.name) }}
	{{ form_row(form.surname) }}
	{{ form_row(form.currentPassword) }}
	{{ form_row(form.newPassword) }}
	{{ form_row(form.repeatPassword) }}
	<span class="topbar">
		<span class="nav-item">
			<span class="nav-link">
				<img class="img-profile rounded-circle" src="{{ avatarImgSrc }}">
			</span>
		</span>
	</span>
	{{ form_row(form.useravatar) }}
	<p class="text-right">
		<button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
	</p>
{{ form_end(form) }}

{% endblock %}
